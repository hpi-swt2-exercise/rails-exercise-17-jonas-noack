<h1>Authors#index</h1>
<h1>Listing authors</h1>

<%= link_to 'Add author', new_author_path %>
<table>
  <tr>
   <th>Name</th>
   <th>Homepage</th>
   <th>Link to Author</th>
   <th>Edit</th>
  </tr>

  <% @authors.each do |author| %>
    <tr>
      <td><%= author.name %></td>
      <td><%= author.homepage %></td>
      <td><%= link_to 'Show', author_path(author) %></td>
      <td><%= link_to 'Edit', edit_author_path(author) %></td>
    </tr>
  <% end %>
</table>
